
@{
    ViewBag.Title = "GetAccount";
}

<h2>Account Search</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-2 control-label">Account Number</label>
            <div class="col-md-10">
                <input name="accountNumber" type="text" value="" class="form-control" required/>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Sort Code</label>
            <div class="col-md-10">
                <input name="sortCode" type="text" value="" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}

